<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <!-- Gray shadow. -->
            <item android:left="3dp" android:top="5dp">
                <shape>
                    <solid android:color="@color/myThemeDark" />
                    <corners android:radius="15dp" />
                </shape>
            </item>
            <!-- White foreground. -->
            <item android:left="2dp" android:top="4dp">
                <shape>
                    <solid android:color="@color/myThemeMedium" />
                    <corners android:radius="15dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!-- Gray shadow. -->
            <item android:left="3dp" android:top="5dp">
                <shape>
                    <solid android:color="@color/myThemeDark" />
                    <corners android:radius="15dp" />
                </shape>
            </item>
            <!-- White foreground. -->
            <item android:bottom="5dp" android:right="3dp">
                <shape>
                    <solid android:color="@color/myTheme" />
                    <corners android:radius="15dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>