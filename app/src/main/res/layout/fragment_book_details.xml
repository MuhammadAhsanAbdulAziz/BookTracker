<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="book"
            type="com.example.booktracker.viewModel.BookViewModel" />
        <variable
            name="bookInterface"
            type="com.example.booktracker.interfaces.BookInterface" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Views.BookDetailsFragment"
        android:background="@drawable/background">

        <ImageView
            android:id="@+id/bookimg"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"

            android:src="@drawable/img"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/myTheme"
            android:text="@{book.bookModel.title}"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">
            <TextView
                android:text="@{book.bookModel.author}"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textSize="20sp"
                android:textColor="@color/myTheme"
                android:hint="Book Author"/>
            <TextView
                android:text="@{book.bookModel.genre}"
                android:layout_width="0dp"
                android:textColor="@color/myTheme"
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textSize="20sp"
                android:hint="Genre"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:text="@{book.bookModel.publication_date}"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/myThemeDark"
                android:textStyle="italic"
                android:textSize="20sp"
                android:hint="Publication Date"/>
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/readbtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="20sp"
                style="@style/Theme.MyTheme"
                android:paddingLeft="10dp"
                app:thumbTint="@color/myThemeDark"
                android:textStyle="italic"
                android:text="Unread"/>
        </LinearLayout>
        <TextView
            android:textColor="@color/myThemeDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Track your Progress"
            android:textSize="25sp"
            android:layout_margin="20dp"/>
        <com.google.android.material.slider.Slider
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="1"
            android:valueTo="100" />
        <LinearLayout
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp">
            <Button
                android:id="@+id/updatebtn"
                android:layout_width="0dp"
                android:text="Update"
                android:fontFamily="@font/poppins_semibold"
                android:background="@drawable/button_seven"
                android:layout_marginRight="5dp"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/delbtn"
                android:text="Delete"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:background="@drawable/button_outline"
                android:backgroundTint="@color/red"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_bolditalic"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</layout>